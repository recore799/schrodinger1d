from numerov import harmonic_oscillator

def harmonic_oscillator_wf(states):
    for i in range(states):

        mesh = 500
        xmax = 10.0
        
        # Get the actual result
        e, iterations, psi = harmonic_oscillator(nodes=i, mesh=mesh, xmax=xmax)

        # Init full wf
        x_full = np.linspace(-xmax, xmax, 2*mesh + 1)
        psi_full = np.zeros(2*mesh + 1)

        # Fill the positive half (x >= 0)
        psi_full[mesh:] = psi

        # Fill the negative half (x < 0) using symmetry
        if nodes % 2 == 0:
            # Even state: ψ(-x) = ψ(x)
            psi_full[:mesh] = np.flip(psi_half[1:])
        else:
            # Odd state: ψ(-x) = -ψ(x)
            psi_full[:mesh] = -np.flip(psi_half[1:])



